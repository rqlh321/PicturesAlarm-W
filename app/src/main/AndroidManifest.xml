<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sic.slideshow">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity.SplashActivity"
            android:theme="@style/SplashTheme"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.MainActivity"/>
        <activity android:name=".Activity.ViewActivity" />
        <service android:name=".MyService"
            android:enabled="true"
            android:exported="true" />
        <receiver android:name=".BroadcastReceivers.TimeReceiver"
            android:enabled="true"
            android:exported="true"
            android:label="TimeReceiver"/>

        <receiver android:name=".BroadcastReceivers.ChargingActionsReceiver"
            android:enabled="true"
            android:exported="true"
            android:label="ChargingActionsReceiver"/>

        <receiver android:name=".BroadcastReceivers.BootCompletedActionsReceiver"
            android:enabled="true"
            android:exported="true"
            android:label="BootCompletedActionsReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
